{
  "name": "weather-api",
  "version": "1.3.0",
  "description": "api to discovery the best beach to surf based in the hour and the weather.",
  "main": "src/index.ts",
  "repository": "https://github.com/brunohafonso95/weath-api.git",
  "author": "Bruno Afonso <brunohafonso@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "commit": "git-cz",
    "lint": "eslint ./src/ ./__tests__ --ext .ts",
    "lint:fix": "eslint ./src/ ./__tests__ --ext .ts --fix",
    "build": "tsc",
    "start": "yarn build && node dist/src/index.js",
    "start:dev": "dotenv -e .env -- ts-node-dev --inspect --transpile-only --no-notify --ignore-watch node_modules src/index.ts",
    "test": "yarn lint && yarn test:unit && yarn test:e2e",
    "test:e2e": "dotenv -e .env -- jest --projects ./__tests__ --runInBand",
    "test:unit": "dotenv -e .env -- jest"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.3",
    "@commitlint/config-conventional": "^8.3.3",
    "@types/axios": "^0.14.0",
    "@types/bcrypt": "^3.0.0",
    "@types/config": "^0.0.36",
    "@types/express": "^4.17.7",
    "@types/jest": "^26.0.9",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/module-alias": "^2.0.0",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.0.27",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "cz-conventional-changelog": "3.2.0",
    "dotenv-cli": "^3.2.0",
    "eslint": "^7.6.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-import-helpers": "^1.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^26.2.2",
    "jest-html-reporters": "^2.0.2",
    "lint-staged": "^10.2.11",
    "nock": "^13.0.4",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.4",
    "ts-node-dev": "^1.0.0-pre.56",
    "typescript": "^3.9.7",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.0.7",
    "@semantic-release/npm": "^7.0.5",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "conventional-changelog-conventionalcommits": "^4.4.0"
  },
  "dependencies": {
    "@overnightjs/core": "^1.7.4",
    "axios": "^0.19.2",
    "bcrypt": "^5.0.0",
    "config": "^3.3.1",
    "express": "^4.17.1",
    "http-status": "^1.4.2",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "mongoose": "^5.9.29"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix -f html -o lint.html",
      "dotenv -e .env -- jest --projects ./__tests__ --findRelatedTests --runInBand",
      "dotenv -e .env -- jest --findRelatedTests",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
